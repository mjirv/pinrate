<h2>Sign Up!</h2>

<%= form_for :user, url: '/users' do |f| %>

	Email Address (you will use this to log in): <%= f.text_field :email %>
	<br />
	First Name: <%= f.text_field :name %>
	<br />
	Last Name (we will only display your last initial!): <%= f.text_field :last_name%>
	<br />
	Password: <%= f.password_field :password %>
	<br />
	Confirm Password: <%= f.password_field :password_confirmation %>
	<br />
	<%= f.submit "Sign Up!" %>

<% end %>